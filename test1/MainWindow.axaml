<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        x:Class="test1.MainWindow"
        Title="Zadania Bolka i Lolka"
        Width="700"
        Height="1300"
        Background="#FFF0F0F0"
            >
    <ScrollViewer>
    <StackPanel Margin="20" Spacing="15">
        <TextBlock Text="Zadania Bolka i Lolka"
                   FontSize="28"
                   FontWeight="Bold"
                   Foreground="#3B3B3B"
                   HorizontalAlignment="Center" />

        <StackPanel>
            <TextBlock Text="Nazwa zadania:" FontWeight="Bold" />
            <TextBox Name="TaskNameBox" Watermark="np. zbudować latawiec"/>
        </StackPanel>

        <StackPanel>
            <TextBlock Text="Wybierz bohatera:" FontWeight="Bold"/>
            <ComboBox Name="CharacterComboBox" Width="150" SelectionChanged="OnCharacterChanged">
                <ComboBoxItem Content="Bolek"/>
                <ComboBoxItem Content="Lolek"/>
            </ComboBox>
        </StackPanel>

        <Border BorderBrush="Gray" BorderThickness="1" Width="120" Height="120" HorizontalAlignment="Left">
            <Image Name="CharacterImage" Stretch="Uniform"/>
        </Border>

        <StackPanel>
            <TextBlock Text="Ustaw priorytet:" FontWeight="Bold"/>
            <StackPanel Orientation="Horizontal" Spacing="10">
                <RadioButton Content="Łatwe" GroupName="Priorytet" Name="LowPriority"/>
                <RadioButton Content="Średnie" GroupName="Priorytet" Name="NormalPriority"/>
                <RadioButton Content="Trudne" GroupName="Priorytet" Name="HighPriority"/>
            </StackPanel>
        </StackPanel>

        <StackPanel>
            <TextBlock Text="Opcje dodatkowe:" FontWeight="Bold"/>
            <CheckBox Name="OutdoorCheckBox" Content="Na dworze"/>
            <CheckBox Name="EquipmentCheckBox" Content="Potrzebny sprzęt"/>
            <CheckBox Name="FriendsCheckBox" Content="Z udziałem innych kolegów"/>
        </StackPanel>

        <ListBox Name="TaskListBox" Height="200" />

        <StackPanel Orientation="Horizontal" Spacing="10">
            <Button Content="Dodaj" Width="100" Click="OnAddTaskClick"/>
            <Button Content="Usuń" Width="100" Click="OnRemoveTaskClick"/>
        </StackPanel>

        <Calendar Name="TaskCalendar" />

        <Button Content="Podsumowanie dnia" Width="150" Click="OnShowTasksForDateClick"/>
    </StackPanel>
    </ScrollViewer>
</Window>
